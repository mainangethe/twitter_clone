<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title_generator(yield(:title)) %></title>

    <%= render 'layouts/rails_default_meta' %>
    
    <!-- Older versions of IE don't support HTML5 -->
    <%= render 'layouts/ie_shim' %>
  </head>

  <body>
    
    <%= render 'layouts/page_header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>

      <%= render 'layouts/page_footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
